
@{
    ViewBag.Title = "UpdatePortfolio";
}
@model FinalProjectPortfolio.Models.Portfolio
<hr />

<h2>EDIT</h2>

<form action="../ChooseStocks/SaveSymbol" method="post">
    <div class="form-group">
        <label>Stock #1 Name</label>
        <input type="text" name="stock1_name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stock #1 Ticker</label>
        <input type="text" name="stock1_tkr" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date</label>
        <input type="date" min="1998-06-19" max="2018-06-19" name="stock1_date" class="form-control" id="datepicker" />
    </div>

    <div class="form-group">
        <label>How Much to Invest in Stock #1?</label>
        <input type="text" name="stock1_beg_investment_value" class="form-control" />
    </div>
    <div class="form-group">
        <label>Update your portfolio!</label>
        <input type="submit" value="Execute Buy" class="form-control" />
    </div>
</form>

