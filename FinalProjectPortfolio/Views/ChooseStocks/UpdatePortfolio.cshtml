
@{
    ViewBag.Title = "UpdatePortfolio";
}

@model FinalProjectPortfolio.Models.Portfolio
<hr />

<h2>EDIT</h2>

@if (ViewBag.Num == 1)
{
    <form action="../ChooseStocks/UpdatePortfolio" method="post">
        <div class="form-group">
            <input type="text" value="@Model.portfolioID" name="portfolioID" hidden />
            <input type="text" value="@ViewBag.Num" name="num" hidden />
            <label>Stock Name</label>
            <input type="text" name="stockName" value="@Model.stock1_name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Stock Ticker</label>
            <input type="text" name="stockTkr" value="stock1_tkr" class="form-control" />
        </div>

        <div class="form-group">
            <label>Date</label>
            <input type="date" min="1998-06-19" max="2018-06-19" name="stockDate" value="stock1_date" class="form-control" id="datepicker" />
        </div>

        <div class="form-group">
            <label>How Much to Invest in Stock #1?</label>
            <input type="text" name="amountInvested" value="stock1_beg_investment_value" class="form-control" />
        </div>
        <div class="form-group">
            <label>Update your portfolio!</label>
            <input type="submit" value="Execute Buy" class="form-control" />
        </div>
    </form>
}


